    .keyboard-item
        width: 30px
        height: 30px
        border-radius(5px)
        flexbox()
        justify-content: center
        align-items: center
        overflow: hidden

        &:nth-child(3)
            svg
                width: 26px
        &:nth-child(4)
            svg
                width: 20px

        &:nth-child(2).toggled,
        &:nth-child(3).toggled,
        &:nth-child(4).toggled
            background-color: #CDCDCD

        svg
            width: 16px
            height: 16px


